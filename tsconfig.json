{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src", // This must be specified if "paths" is.
    // "rootDir": ".", //required for rollup typescript to generate .d.ts files
    "paths": {
      "@palmetto/palmetto-design/tokens": [
        "../node_modules/@palmetto/palmetto-design-tokens"
      ] // This mapping is relative to "baseUrl"
    },
    // "emitDeclarationOnly": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "lib": [
      "es2019",
      "DOM"
    ]
  },
  "include": [
    "./src",
    "./types",
    "index.d.ts"
  ]
}